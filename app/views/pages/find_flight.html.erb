<section>
  <div class="row" style="padding-top:15px;">
    <div class="col-md-12">
      <% if @sorted_median.empty? %>
      <div class="row">
        <div class="col-md-12" style="text-align: center">
          <h3>
          No flight data was found for that date/route combination <br>:( <br><br>
          We're sorry, we were really tired and put in as much data as we could. <br><br>
            Try another flight!
          </h3>
        </div>
      </div>
      <% else %>
          <% @sorted_median.each do |carrier| %>
              <div class="row">
                <div class="col-md-6"><b><%=carrier[0]%></b></div>
                <div class="col-md-6">Usually <%= (carrier[1] >= 0) ? "delayed by" : "early"%> <b><%=carrier[1].abs.to_i%></b> minutes.</div>
              </div>
          <% end %>
          </div>
      <% end %>
      </div>
</section>